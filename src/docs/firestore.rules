
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // ---------------------------------
    // Helper Functions
    // ---------------------------------
    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    function isAdmin() {
      return isSignedIn() && exists(/databases/$(database)/documents/admins/$(request.auth.uid));
    }
    
    // ---------------------------------
    // User-Specific Data
    // ---------------------------------
    match /users/{userId} {
      allow read, write: if isOwner(userId);
    }

    match /users/{userId}/favorites/{docId} {
      allow read, write: if isOwner(userId);
    }
    
    // ---------------------------------
    // Admin & Predictions
    // ---------------------------------
    match /admins/{adminId} {
      // Let any signed in user check if a UID is an admin
      // This is safe as it only reveals a boolean status.
      // Write access is restricted to admins only.
      allow get: if isSignedIn();
      allow list, write: if isAdmin();
    }
    
    match /predictionFixtures/{fixtureId} {
      allow get, list: if true; // Publicly readable
      allow write: if isAdmin(); // Only admins can pin matches
    }

    match /predictionFixtures/{fixtureId}/userPredictions/{userId} {
      allow read: if true; // All predictions for a fixture are public
      allow create, update: if isOwner(userId); // Users can manage their own prediction
      allow delete: if isOwner(userId) || isAdmin(); // User or admin can delete
    }
    
    match /leaderboard/{userId} {
        allow read: if true; // Leaderboard is public
        allow write: if isAdmin(); // Leaderboard is updated by a trusted process (admin)
    }

    // ---------------------------------
    // Public Read / Admin Write Collections
    // ---------------------------------
    match /news/{newsId} {
      allow get, list: if true;
      allow write: if isAdmin();
    }
    
    match /leagueCustomizations/{leagueId} {
      allow get, list: if true;
      allow write: if isAdmin();
    }
    match /teamCustomizations/{teamId} {
      allow get, list: if true;
      allow write: if isAdmin();
    }
     match /playerCustomizations/{playerId} {
      allow get, list: if true;
      allow write: if isAdmin();
    }
     match /coachCustomizations/{coachId} {
      allow get, list: if true;
      allow write: if isAdmin();
    }
    match /countryCustomizations/{countryId} {
        allow get, list: if true;
        allow write: if isAdmin();
    }
     match /continentCustomizations/{continentId} {
        allow get, list: if true;
        allow write: if isAdmin();
    }
     match /matchCustomizations/{matchId} {
        allow get, list: if true;
        allow write: if isAdmin();
    }
    match /iraqiLeagueTopScorers/{scorerId} {
        allow get, list: if true;
        allow write: if isAdmin();
    }
    match /pinnedIraqiMatches/{matchId} {
        allow get, list: if true;
        allow write: if isAdmin();
    }
  }
}
