
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper Functions
    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    function isAdmin() {
      return isSignedIn() && exists(/databases/$(database)/documents/admins/$(request.auth.uid));
    }

    // --- User Data ---
    // Users can read and write to their own profile document.
    match /users/{userId} {
      allow read, write: if isOwner(userId);
    }

    // Users can read and write to the 'data' document in their own 'favorites' subcollection.
    match /users/{userId}/favorites/data {
        allow read, write: if isOwner(userId);
    }
    
    // --- Admin ---
    // Admins can read, list, and write to the admins collection.
    // Regular users can only read their own admin status document.
    match /admins/{adminId} {
      allow get: if isOwner(adminId);
      allow list, write: if isAdmin();
    }
    
    // --- Publicly Readable, Admin Writable Data ---
    // Anyone can read news, admins can write.
    match /news/{newsId} {
      allow get, list: if true;
      allow write: if isAdmin();
    }
    
    // Anyone can read prediction fixtures, admins can write.
    match /predictionFixtures/{fixtureId} {
      allow get, list: if true;
      allow write: if isAdmin();
    }

    // Users can create/update their own predictions. Admins can delete any prediction.
    match /predictionFixtures/{fixtureId}/userPredictions/{userId} {
      allow read: if true; // Allow reading all predictions for a fixture
      allow create, update: if isOwner(userId);
      allow delete: if isOwner(userId) || isAdmin();
    }
    
    // Anyone can read the leaderboard. Only admins can write to it (via a trusted process).
    match /leaderboard/{userId} {
        allow read: if true;
        allow write: if isAdmin();
    }

    // --- Customization Data (Public Read, Admin Write) ---
    match /leagueCustomizations/{leagueId} {
      allow get, list: if true;
      allow write: if isAdmin();
    }
    match /teamCustomizations/{teamId} {
      allow get, list: if true;
      allow write: if isAdmin();
    }
    match /playerCustomizations/{playerId} {
      allow get, list: if true;
      allow write: if isAdmin();
    }
    match /coachCustomizations/{coachId} {
      allow get, list: if true;
      allow write: if isAdmin();
    }
    match /countryCustomizations/{countryId} {
        allow get, list: if true;
        allow write: if isAdmin();
    }
     match /continentCustomizations/{continentId} {
        allow get, list: if true;
        allow write: if isAdmin();
    }
     match /matchCustomizations/{matchId} {
        allow get, list: if true;
        allow write: if isAdmin();
    }

    // --- Iraqi League Specific Data (Public Read, Admin Write) ---
    match /iraqiLeagueTopScorers/{scorerId} {
        allow get, list: if true;
        allow write: if isAdmin();
    }
    match /pinnedIraqiMatches/{matchId} {
        allow get, list: if true;
        allow write: if isAdmin();
    }

    // Default deny all other reads/writes
  }
}
