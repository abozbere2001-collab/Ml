
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper Functions
    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    function isAdmin() {
      return isSignedIn() && exists(/databases/$(database)/documents/admins/$(request.auth.uid));
    }

    // --- User Data ---
    match /users/{userId} {
      allow read, write: if isOwner(userId);
    }

    match /users/{userId}/favorites/{docId} {
      allow read, write: if isOwner(userId);
    }
    
    // --- Admin ---
    match /admins/{adminId} {
      allow read: if isOwner(adminId) || isAdmin();
      allow list, write: if isAdmin();
    }
    
    // --- Publicly Readable, Admin Writable Data ---
    match /news/{newsId} {
      allow read: if true;
      allow write: if isAdmin();
    }

    match /managedCompetitions/{competitionId} {
        allow read: if true;
        allow write: if isAdmin();
    }
    
    match /predictionFixtures/{fixtureId} {
      allow read: if true;
      allow write: if isAdmin();
    }

    match /predictionFixtures/{fixtureId}/userPredictions/{userId} {
      allow read: if true;
      allow create, update: if isOwner(userId);
      allow delete: if isOwner(userId) || isAdmin();
    }
    
    match /leaderboard/{userId} {
        allow read: if true;
        allow write: if isAdmin(); // Only admins can update the leaderboard scores
    }

    // --- Customization Data ---
    match /leagueCustomizations/{leagueId} {
      allow read: if true;
      allow write: if isAdmin();
    }
    match /teamCustomizations/{teamId} {
      allow read: if true;
      allow write: if isAdmin();
    }
    match /playerCustomizations/{playerId} {
      allow read: if true;
      allow write: if isAdmin();
    }
    match /coachCustomizations/{coachId} {
      allow read: if true;
      allow write: if isAdmin();
    }
    match /countryCustomizations/{countryId} {
        allow read: if true;
        allow write: if isAdmin();
    }
     match /continentCustomizations/{continentId} {
        allow read: if true;
        allow write: if isAdmin();
    }
     match /matchCustomizations/{matchId} {
        allow read: if true;
        allow write: if isAdmin();
    }

    // --- Iraqi League Specific Data ---
    match /iraqiLeagueTopScorers/{scorerId} {
        allow read: if true;
        allow write: if isAdmin();
    }
    match /pinnedIraqiMatches/{matchId} {
        allow read: if true;
        allow write: if isAdmin();
    }
  }
}
