
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // القاعدة العليا: صلاحيات كاملة للمدير العام المحدد
    // This rule grants full read/write access to the specified admin email.
    match /{document=**} {
      allow read, write: if request.auth != null && request.auth.token.email == "sagralnarey@gmail.com";
    }

    // --- الوظائف المساعدة ---
    function isSignedIn() {
      return request.auth != null;
    }
    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    // --- قواعد المستخدمين العاديين ---

    // بيانات المستخدم: يمكن للمالك فقط الوصول إليها
    match /users/{userId} {
      allow read, write: if isOwner(userId);
    }
    match /users/{userId}/{document=**} {
      allow read, write: if isOwner(userId);
    }
    
    // التوقعات: يمكن للجميع القراءة، ولكن المالك فقط يمكنه كتابة توقعه
    match /predictionFixtures/{fixtureId} {
      allow get, list: if true;
    }
    match /predictionFixtures/{fixtureId}/userPredictions/{userId} {
      allow get, list: if true;
      allow write: if isOwner(userId);
    }
    match /leaderboard/{userId} {
      allow get, list: if true;
    }

    // الأخبار وتخصيصات الأسماء: يمكن للجميع القراءة
    match /news/{newsId} {
      allow get, list: if true;
    }
    match /leagueCustomizations/{leagueId} {
      allow get, list: if true;
    }
    match /teamCustomizations/{teamId} {
      allow get, list: if true;
    }
    match /playerCustomizations/{playerId} {
      allow get, list: if true;
    }
    match /coachCustomizations/{coachId} {
      allow get, list: if true;
    }
    match /countryCustomizations/{countryId} {
      allow get, list: if true;
    }
    match /continentCustomizations/{continentId} {
      allow get, list: if true;
    }
    match /matchCustomizations/{matchId} {
      allow get, list: if true;
    }
    match /iraqiLeagueTopScorers/{scorerId} {
      allow get, list: if true;
    }
    match /pinnedIraqiMatches/{matchId} {
      allow get, list: if true;
    }
  }
}
