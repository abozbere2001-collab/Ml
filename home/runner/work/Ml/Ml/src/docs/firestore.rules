
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    /** ========================= HELPER FUNCTIONS ========================= **/
    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    // This is the most direct way to grant admin privileges for development.
    function isAdmin() {
      return request.auth != null && request.auth.token.email == "sagralnarey@gmail.com";
    }

    /** ========================= USERS ========================= **/
    match /users/{userId}/{document=**} {
      allow read, write: if isOwner(userId) || isAdmin();
    }

    /** ========================= PREDICTIONS ========================= **/
    match /predictionFixtures/{fixtureId} {
      allow read: if true;
      allow write: if isAdmin();
    }
    match /predictionFixtures/{fixtureId}/userPredictions/{userId} {
      allow read: if true;
      // Allow create/update only if the user is the owner.
      allow write: if isOwner(userId);
    }
    match /leaderboard/{userId} {
      allow read: if true;
      // Only admins can write to the leaderboard.
      allow write: if isAdmin();
    }

    /** ========================= NEWS ========================= **/
    match /news/{newsId} {
      allow read: if true;
      allow write: if isAdmin(); // create, update, delete
    }

    /** ========================= CUSTOMIZATIONS & PUBLIC DATA ========================= **/
    match /leagueCustomizations/{leagueId} {
      allow read: if true;
      allow write: if isAdmin();
    }
    match /teamCustomizations/{teamId} {
      allow read: if true;
      allow write: if isAdmin();
    }
    match /playerCustomizations/{playerId} {
      allow read: if true;
      allow write: if isAdmin();
    }
    match /coachCustomizations/{coachId} {
      allow read: if true;
      allow write: if isAdmin();
    }
    match /countryCustomizations/{countryId} {
      allow read: if true;
      allow write: if isAdmin();
    }
    match /continentCustomizations/{continentId} {
      allow read: if true;
      allow write: if isAdmin();
    }
    match /matchCustomizations/{matchId} {
      allow read: if true;
      allow write: if isAdmin();
    }
    match /iraqiLeagueTopScorers/{scorerId} {
      allow read: if true;
      allow write: if isAdmin();
    }
    match /pinnedIraqiMatches/{matchId} {
      allow read: if true;
      allow write: if isAdmin();
    }

    // --- Fallback rule ---
    // Deny all other writes by default
    match /{path=**} {
      allow read: if true;
      allow write: if isAdmin();
    }
  }
}
