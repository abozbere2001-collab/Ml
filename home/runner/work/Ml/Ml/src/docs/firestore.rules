
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // --- الدالة المساعدة للتحقق من المدير (الطريقة النهائية) ---
    function isAdmin() {
      // التحقق مباشرة من البريد الإلكتروني للمدير
      return request.auth != null && request.auth.token.email == "sagralnarey@gmail.com";
    }

    // --- القاعدة الشاملة للمدير (صلاحيات مطلقة) ---
    // هذه القاعدة تمنح المدير صلاحيات قراءة وكتابة كاملة على كل شيء.
    // يتم تقييمها أولاً، وإذا تحققت، يتم منح الوصول فورًا.
    match /{document=**} {
      allow read, write: if isAdmin();
    }

    // --- صلاحيات المستخدمين العاديين والزوار ---

    // المستخدمون المسجلون يمكنهم القراءة والكتابة على بياناتهم الخاصة فقط
    match /users/{userId}/{document=**} {
      allow read, write: if request.auth.uid == userId;
    }

    // أي شخص (زائر أو مستخدم) يمكنه قراءة البيانات العامة
    match /news/{newsId} {
      allow read: if true;
    }
    match /leagueCustomizations/{leagueId} {
      allow read: if true;
    }
    match /teamCustomizations/{teamId} {
      allow read: if true;
    }
    match /playerCustomizations/{playerId} {
      allow read: if true;
    }
    match /coachCustomizations/{coachId} {
      allow read: if true;
    }
    match /countryCustomizations/{countryId} {
      allow read: if true;
    }
    match /continentCustomizations/{continentId} {
      allow read: if true;
    }
    match /matchCustomizations/{matchId} {
      allow read: if true;
    }
    match /iraqiLeagueTopScorers/{scorerId} {
      allow read: if true;
    }
    match /pinnedIraqiMatches/{matchId} {
      allow read: if true;
    }
    match /predictionFixtures/{fixtureId} {
      allow read: if true;
    }
     match /leaderboard/{userId} {
      allow read: if true;
    }

    // المستخدمون المسجلون يمكنهم كتابة توقعاتهم
    match /predictionFixtures/{fixtureId}/userPredictions/{userId} {
      allow read: if true;
      allow write: if request.auth.uid == userId;
    }
  }
}
