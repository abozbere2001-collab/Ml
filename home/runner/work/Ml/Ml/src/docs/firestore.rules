
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // --- وظائف مساعدة ---
    function isSignedIn() {
      return request.auth != null;
    }
    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }
    function isAdmin() {
      return request.auth != null && request.auth.token.email == "sagralnarey@gmail.com";
    }

    // --- قواعد المستخدمين ---
    match /users/{userId}/{document=**} {
      allow read, write: if isOwner(userId);
    }
    
    // --- قواعد التوقعات ---
    match /predictionFixtures/{fixtureId} {
      allow read: if true;
      allow write: if isAdmin();
    }
    match /predictionFixtures/{fixtureId}/userPredictions/{userId} {
      allow read: if true;
      allow write: if isOwner(userId);
    }
    match /leaderboard/{userId} {
      allow read: if true;
      allow write: if isAdmin(); // Only admin can update leaderboards
    }

    // --- قواعد الأخبار ---
    match /news/{newsId} {
      allow read: if true;
      allow write: if isAdmin(); // write includes create, update, and delete
    }

    // --- قواعد التخصيص والبيانات العامة ---
    match /leagueCustomizations/{leagueId} { 
      allow read: if true;
      allow write: if isAdmin();
    }
    match /teamCustomizations/{teamId} { 
      allow read: if true;
      allow write: if isAdmin();
    }
    match /playerCustomizations/{playerId} { 
      allow read: if true;
      allow write: if isAdmin();
    }
    match /coachCustomizations/{coachId} { 
      allow read: if true;
      allow write: if isAdmin();
    }
    match /countryCustomizations/{countryId} { 
      allow read: if true;
      allow write: if isAdmin();
    }
    match /continentCustomizations/{continentId} { 
      allow read: if true;
      allow write: if isAdmin();
    }
    match /matchCustomizations/{matchId} { 
      allow read: if true;
      allow write: if isAdmin();
    }
    match /iraqiLeagueTopScorers/{scorerId} { 
      allow read: if true;
      allow write: if isAdmin();
    }
    match /pinnedIraqiMatches/{matchId} { 
      allow read: if true;
      allow write: if isAdmin();
    }
  }
}
